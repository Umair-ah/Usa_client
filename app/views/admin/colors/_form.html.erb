<div class="grid place-items-center">
  <div class="bg-slate-100 p-4">

    <%= form_with(model: [:admin, @product, color]) do |form| %>
      <% if color.errors.any? %>
        <div style="color: red">
          <ul>
            <% color.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>

      <%= form.hidden_field :product_id, value: @product.id %>

      <div>
        <%= form.submit "Add Color", class:"bg-slate-700 hover:bg-slate-800 p-2 text-white hover:cursor-pointer my-2" %>
      </div>
    <% end %>

  </div>
</div>
