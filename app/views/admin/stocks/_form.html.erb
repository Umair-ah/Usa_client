<div class="grid place-items-center">
  <div class="bg-slate-100 p-4">

    <%= form_with(model: [:admin, @product, @color, stock]) do |form| %>
      <% if stock.errors.any? %>
          <ul style="color:red;">
            <% stock.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="bg-gray-200 text-gray-900 font-bold">
        <span class="font-bold text-lg">Product:</span> <%= @product.name %> <br>
        <span class="font-bold text-lg">Color:</span> <%= @color.name %>


      </div>

        <%= form.hidden_field :product_id, value: @product.id %>


      <div>
        <%= form.label :size, style: "display: block" %>
        <%= form.text_field :size %>
      </div>

      <div>
        <%= form.label :piece, style: "display: block" %>
        <%= form.number_field :piece %>
      </div>

      <div>
        <%= form.submit class:"p-2 text-white bg-slate-800 hover:bg-slate-700 hover:cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
