
<% if @gender.categories.present? %>
  
  <% if @gender.name == "Male" %>
    <h4 class="text-center font-bold mt-4 text-slate-700 text-2xl">Men's Collections</h4>
  <% else %>
    <h4 class="text-center font-bold mt-4 text-slate-700 text-2xl">Women's Collections</h4>
  <% end %>
  
  <section>
    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-stretch">

        <div class="lg:col-span-2 lg:py-8">
          <ul class="grid grid-cols-2 gap-4">
            <% @gender.categories.each do |c| %>
              <%= link_to category_path(c), class:"group block flex flex-col justify-start" do %>
                <li class="hover:bg-slate-100 transition:ease-in duration-300 border border-slate-500 p-6">

                      <%= image_tag(c.thumbnail, class:"rounded object-cover h-48 w-96") %>

                      <div class="mt-3">
                        <h3
                          class="font-medium text-gray-900 group-hover:underline group-hover:underline-offset-4"
                        >
                          <%= c.name %>
                        </h3>

                      </div>
                </li>
              <% end %>
            <% end %>
        
          </ul>
        </div>
      </div>
    </div>
  </section>

<% else %>
  <section class="bg-slate-100 grid place-items-center" style="height:678px;">
    <span class="font-bold text-center text-3xl text-gray-700">Coming Soon...</span>
  </section>

<% end %>

