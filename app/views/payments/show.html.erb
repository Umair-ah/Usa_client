<div class="bg-white shadow-lg rounded-md p-6 max-w-md mx-auto">
  <h3 class="text-2xl font-bold mb-4">Order Summary</h3>

  <% @orders.each do |order| %>
    <% order.line_items.each do |line_item| %>
      <div class="flex items-center mb-4">
        <%= image_tag(line_item.product.images.first, class:"mr-2 rounded-md w-28 h-28", alt:line_item.product.name) %>
        <div>
          <p class="text-gray-700 font-semibold"><%= line_item.product.name %></p>
          <p class="text-sm text-gray-500"><%= line_item.product.category.name %></p>
          <p class="text-sm text-gray-500 font-bold">Qty: <%= line_item.quantity %></p>
          <p class="text-sm text-gray-500 font-bold">Size: <%= line_item.stock.size %></p>



        </div>
        <span class="ml-auto text-gray-700 font-semibold">&#x20B9;<%= line_item.product.price %></span>
      </div>
      <% end %>
  <% end %>


